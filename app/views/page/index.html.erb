<%= render :partial => 'partials/home-banner' %>

<div id="wrap-bg" class='clearfix'>
  <div id="wrap-bg-top"></div>
  <div id="content" class="container">

    <div id="proverbs" class="padding">
      <div class="row">
        <div class="span4 proverbs-folding">
          <h2><img src="<%= asset_path('h-heart.png') %>" alt="" class="h2-heart"><%= find_text(1).name %></h2>
          <p class="info-text os"><%= find_text(1).descr %></p>
        </div>

        <div class="span4 proverbs-folding">
          <h2><img src="<%= asset_path('h-heart.png') %>" alt="" class="h2-heart"><%= find_text(2).name %></h2>
          <p class="info-text os"><%= find_text(2).descr %></p>
        </div>

        <div class="span4 proverbs-folding">
          <h2><img src="<%= asset_path('h-heart.png') %>" alt="" class="h2-heart"><%= find_text(3).name %></h2>
          <p class="info-text os"><%= find_text(3).descr %></p>
        </div>
      </div>
    </div>

    <div id="video" class="padding">
      <div class="row">
        <div class="span7">
          <iframe class="main-video-frame" src="http://player.vimeo.com/video/<%= main_video.video_id %>?title=0&amp;byline=0&amp;portrait=0&amp;color=ff0179" width="640" height="360" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>

        </div>
        <div class="span5 video-info-block video-text-folding">
          <h1><%= find_text(4).name %></h1>
          <p class="video-text os"><%= find_text(4).descr %></p>
          <p class="video-text os"><i><%= find_text(5).descr %></i></p>
        </div>
      </div>
    </div>

    <div id="separator-top" class="container padding">
      <div class="row">
        <div class="span1 sep-left-flower">
          <img src="<%= asset_path('sep-l.png') %>" alt="">
        </div>
        <div class="span4 sep-line">&nbsp;</div>
        <div class="span2 txt-center sep-center-img">
          <img src="<%= asset_path('h-heart.png') %>" alt=""><h2>Наші роботи</h2>
        </div>
        <div class="span4 sep-line">&nbsp;</div>
        <div class="span1 text-right sep-left-flower">
          <img src="<%= asset_path('sep-r.png') %>" alt="">
        </div>
      </div>
    </div><!-- #seprator - top -->

    <!-- Video Section -->
    <div id="video-section" class="container padding">
      <div class="row">
        <% home_video.each do |hv| %>
        <div class="span3 make-full-width">
          <h3><%= hv.name %></h3>
          <% if hv.vimeo == true %>
        <div class="video-section-frame">
          <iframe src="http://player.vimeo.com/video/<%= hv.video_id %>?title=0&amp;byline=0&amp;portrait=0&amp;color=ff0179" width="270" height="152" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
        </div>
          <% elsif hv.youtube == true %>

          <% end %>
          <p><%= hv.descr %></p>
        </div> <!-- Video item end here -->
        <% end %>
      </div>
    </div>
    <!-- Video Section End -->

    <div id="separator-top" class="container padding">
      <div class="row">
        <div class="span1 sep-left-flower">
          <img src="<%= asset_path('sep-l.png') %>" alt="">
        </div>
        <div class="span4 sep-line">&nbsp;</div>
        <div class="span2 txt-center sep-center-img">
          <img src="<%= asset_path('h-heart.png') %>" alt=""><h2>Відгуки про нас</h2>
        </div>
        <div class="span4 sep-line">&nbsp;</div>
        <div class="span1 text-right sep-left-flower">
          <img src="<%= asset_path('sep-r.png') %>" alt="">
        </div>
      </div>
    </div><!-- #seprator - top -->

    <div id="wedding-feedback" class="container padding">
      <div class="row">
        <% @feedback.each do |f| %>
        <div class="span6 wedding-feedback-container" style="<%= cycle('', '', 'margin-top:10px;', 'margin-top:10px;') %>">
          <div class="feedback-img-sign" >
            <%= image_tag(f.avatar.url(:thumb), :alt => f.name, :class => 'feedback-img') %>
          </div>
          <h2 style="line-height: 26px;"><%= f.name %></h2>
          <p><i><%= truncate(f.descr, :length => 200, :omission => '...') %></i></p>
          <p class="author"><%= f.customer_name %></p>
        </div>
        <% end %>

      </div>
    </div>

    <div id="separator-bottom" class="container padding">
      <div class="row">
        <div class="span1">
          <img src="<%= asset_path('bottom_l.png') %>" alt="">
        </div>
        <div class="span4 sep-line push-down-sep">&nbsp;</div>
        <div class="span2 txt-center push-down-sep">
          <img src="<%= asset_path('h-heart.png') %>" alt="">
        </div>
        <div class="span4 sep-line push-down-sep">&nbsp;</div>
        <div class="span1 text-right">
          <img src="<%= asset_path('bottom_r.png') %>" alt="">
        </div>
      </div>
    </div><!-- #seprator - top -bottom -->

  </div><!-- content -->
  <div id="wrap-bg-bottom"></div>
</div><!-- wrap bg -->
