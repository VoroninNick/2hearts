<style type="text/css">
  .service h1{
    font-weight: lighter;
    font-family: 'Georgia', sans-serif;
    font-size: 42px;
  }
    .service h2{
      border-bottom: 1px dashed #dcdadb;
      border-top: 1px dashed #dcdadb;
      padding-top: 10px;
      margin-bottom: 60px;

      color: #cf005d;
      font-family: "Georgia", sans-serif;
      text-shadow: 0 1px 0 #fff;
      font-weight: lighter;
    }
    .service p{
      color: #6c6d71;
      font-size: 16px;
      line-height: 24px;
    }
    .service .row{
      margin-left: -15px;
    }
    .service img.avatar{
      border: 8px solid #e7e6e2;
      -moz-box-shadow: 0 0 7px rgba(2,2,2,.22);
      -webkit-box-shadow: 0 0 7px rgba(2,2,2,.22);
      box-shadow: 0 0 7px rgba(2,2,2,.22);
    }
    .service ul.catalog{
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .service ul.catalog li{
      line-height: 35px;
      font-weight: lighter;
      color: #646464;
      font-family: 'Georgia', sans-serif;
      text-decoration: none;
      font-size: 24px;

      border-top: 1px dashed #dcdadb;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .service ul.catalog li:last-child{
      border-bottom: 1px dashed #dcdadb;
    }

    .service ul.catalog li ul{
      list-style: none;
    }

    .service ul.catalog li a, .service ul.catalog li a:hover, .service ul.catalog li a:active{
      text-decoration: none;
      font-weight: lighter;
      color: #646464;
    }
    blockquote em.left{
      float: left;
      font-size: 90px;
      color: #cf005d;
    }

  blockquote em.right{
    float: right;
    font-size: 40px;
    color: #cf005d;
  }
  blockquote{
    margin-top: 50px;
    margin-bottom: 50px;
    margin-left: 0;
    margin-right: 25px;
    padding: 0;
    border-left: 0;
    text-align: right;
    width: 56%;
    float: left;
  }
    blockquote p{
      color: #cf005d;
      font-family: 'Open Sans', sans-serif;
      text-shadow: 0 1px 0 #fff;
      font-weight: 300;
      font-size: 24px !important;
      line-height: 40px !important;
    }
</style>
<div id="wrap-bg" style="margin-top: 100px;">
  <div id="wrap-bg-top"></div>
    <div id="content" class="container service">
      <div class="row">
        <div class="span4">
          <h1>ПОСЛУГИ</h1>
          <ul class="catalog" style="margin-top: -4px;">
            <% @render_catalog.each do |c| %>
              <% if c.service.present? %>
                <% if c.sub_categories.present? %>
                  <li><%= link_to c.name.mb_chars.capitalize.to_s, services_path + '/' + c.slug + '/' + c.service.slug %>
                  <% c.sub_categories.each do |sc| %>
                    <ul>
                      <li><%= link_to sc.name.mb_chars.capitalize.to_s, services_path + '/' + c.slug + '/' + sc.slug + '/' + c.service.slug %></li>
                    </ul>
                  <% end %>
                  </li>
                <% else %>
                  <li><%= link_to c.name.mb_chars.capitalize.to_s, services_path + '/' + c.slug + '/' + c.service.slug %></li>
                <% end %>
              <% else %>
                <% if c.sub_categories.present? %>
                  <li><%= c.name.mb_chars.capitalize.to_s %>
                    <% c.sub_categories.each do |sc| %>
                      <ul>
                        <li><%= sc.name.mb_chars.capitalize.to_s %></li>
                      </ul>
                    <% end %>
                  </li>
                <% else %>
                  <li><%= c.name.mb_chars.capitalize.to_s %></li>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>


        <div class="span8" style="margin-top: 105px;">
        </div>
      </div>
      <div id="separator-bottom" class="container padding">
        <div class="row" style="margin-left: -30px !important;">
          <div class="span1">
            <img src="<%= asset_path('bottom_l.png') %>" alt="">
          </div>
          <div class="span4 sep-line push-down-sep">&nbsp;</div>
          <div class="span2 txt-center push-down-sep">
            <img src="<%= asset_path('h-heart.png') %>" alt="">
          </div>
          <div class="span4 sep-line push-down-sep">&nbsp;</div>
          <div class="span1 text-right">
            <img src="<%= asset_path('bottom_r.png') %>" alt="">
          </div>
        </div>
      </div><!-- #seprator - top -bottom -->
    </div><!-- content -->
  <div id="wrap-bg-bottom"></div>
</div><!-- wrap bg -->
